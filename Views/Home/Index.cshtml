@{
    ViewBag.Title = "Dashboard";
    ViewBag.BodyClass = "body-dash-img";
}
<style>
    .main-content, .container {
    margin-top: 0px!important;
    }
</style>
<div class="container body-dash-img mt-0">
    <div class="row align-items-start">
        <!-- Dashboard Tiles (left) -->
        <div class="col-md-6">
            <div class="bg-white p-3 mb-3 rounded shadow-sm w-100">
                <h5 class="mb-1">Projects</h5>

                <!-- How it works (manual project flow) -->
                <div class="alert alert-light border small mb-2">
                    <strong>How it works</strong>
                    <ol class="mb-0 ps-3">
                        <li>Create a <em>Manual Project</em> with the correct client, contact, and site address.</li>
                        <li>From the project, add a <em>Quote</em>, <em>Tender</em>, or <em>Order</em> (starts as Draft).</li>
                        <li>Inside a Quote, use <em>Import Design File</em> to bring in the designer’s Excel, then <em>Generate &amp; Mail</em> to create revisions.</li>
                    </ol>
                </div>

                <div class="d-flex gap-3 mb-3 flex-wrap justify-content-center">
                    <!-- List & Manage Projects -->
                    <div class="card dashboard-card text-center position-relative"
                         onclick="location.href='@Url.Action("Index","Projects")'">
                        <i class="fas fa-list dashboard-icon"></i>
                        <div class="card-title">List &amp; Manage Projects</div>
                        <hr />
                        <div class="small text-white fst-italic">View created projects, documents &amp; options</div>
                    </div>

                    <!-- New Manual Project -->
                    <div class="card dashboard-card text-center"
                         onclick="location.href='@Url.Action("Create","Projects")'">
                        <i class="fas fa-folder-plus dashboard-icon"></i>
                        <div class="card-title">New Manual Project</div>
                        <hr />
                        <div class="small text-white fst-italic">Create project with client, contact &amp; address</div>
                    </div>

                    <!-- List & Manage Customers -->
                    <div class="card dashboard-card text-center position-relative"
                         onclick="location.href='@Url.Action("Customers","Admin")'">
                        <i class="fas fa-building dashboard-icon"></i>
                        <div class="card-title">Manage Customers</div>
                        <hr />
                        <div class="small text-white fst-italic">View / Edit Customers, their projects  &amp; details</div>
                    </div>
                </div>
            </div>
        </div>

        @*<div class="col-md-2 mb-4">
            <div class="card dashboard-card text-center" onclick="location.href='@Url.Action("Customers", "Admin")'">
                <i class="fas fa-building dashboard-icon"></i>
                <div class="card-title">Manage Customers</div>
            </div>
        </div>*@
        <!-- Right: Quick Insights -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 px-3 pt-3 pb-2" style="border-radius: 6px;">
                <h6 class="text-dark fw-semibold mb-3 border-bottom pb-2 text-uppercase text-center" style="letter-spacing: 2px; border-color: #bbb;">
                    Quick Insights
                </h6>
                <div class="table-responsive">
                    <table class="table table-sm table-striped mb-0" style="font-size: 0.8rem;">
                        <tbody>
                            <tr>
                                <td>
                                    <i class="fas fa-user-group text-info me-2 fa-fw"></i>
                                    <span>Users</span>
                                </td>
                                <td class="text-end fw-bold">@ViewBag.UserCount</td>
                            </tr>
                            <tr>
                                <td>
                                    <i class="fas fa-boxes text-primary me-2 fa-fw"></i>
                                    <span>Stock Items</span>
                                </td>
                                <td class="text-end fw-bold">@ViewBag.StockCount</td>
                            </tr>
                            <tr>
                                <td>
                                    <i class="fas fa-screwdriver-wrench text-danger me-2 fa-fw"></i>
                                    <span>Assemblies</span>
                                </td>
                                <td class="text-end fw-bold">@ViewBag.AssemblyCount</td>
                            </tr>
                            <tr>
                                <td colspan="2" class="py-1">
                                    <hr class="my-1 border-secondary opacity-50">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <i class="fas fa-file-excel text-success me-2 fa-fw"></i>
                                    <span>Projects</span>
                                </td>
                                <td class="text-end fw-bold">@ViewBag.ProjectCount</td>
                            </tr>
                            <tr>
                                <td>
                                    <i class="fas fa-diagram-project text-success me-2 fa-fw"></i>
                                    <span>Tenders</span>
                                </td>
                                <td class="text-end fw-bold">@ViewBag.TenderCount</td>
                            </tr>
                            <tr>
                                <td>
                                    <i class="fas fa-file-excel text-warning me-2 fa-fw"></i>
                                    <span>Quotes</span>
                                </td>
                                <td class="text-end fw-bold">@ViewBag.ExcelQuoteCount</td>
                            </tr>
                            <tr>
                                <td>
                                    <i class="fas fa-file-invoice text-warning me-2 fa-fw"></i>
                                    <span>Orders</span>
                                </td>
                                <td class="text-end fw-bold">@ViewBag.OrderCount</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

