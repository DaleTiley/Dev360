@model IEnumerable<MillenniumWebFixed.Models.UOM>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Units of Measure";
}

<div class="container mt-3">
    <h4>Units of Measure</h4>
    <a href="@Url.Action("Index", "Admin")" class="btn mb-3 theme-button btn-sm">
        ← Back to Admin Panel
    </a>
    <button class="btn btn-primary mb-3 theme-button btn-sm" onclick="openAddModal()">
        <i class="fas fa-plus"></i> Add New
    </button>

    <table class="table table-striped table-bordered table-dark-whole">
        <thead class="table-dark small">
            <tr>
                <th style="width: 100px;">UOM Code</th>
                <th>Description</th>
                <th>Base Unit</th>
                <th style="width: 100px; text-align: center;">Actions</th>
            </tr>
        </thead>
        <tbody class="small">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UOMCode</td>
                    <td>@item.Description</td>
                    <td>@item.BaseUnit</td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                            <button class="btn btn-outline-primary" title="Edit" onclick="openEditModal('@item.UOMCode')">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-outline-danger" title="Delete" onclick="confirmDelete('@item.UOMCode')">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<!-- MODALS -->
<div class="modal fade" id="uomModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-sm border-0">
            <div class="modal-header bg-dark text-white py-2 px-3">
                <h5 class="modal-title">Unit of Measure</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="uomCode" name="UOMCode" />
                <div class="mb-2">
                    <label>UOM Code</label>
                    <input type="text" class="form-control" id="uomCodeInput" maxlength="10" />
                </div>
                <div class="mb-2">
                    <label>Description</label>
                    <input type="text" class="form-control" id="uomDescription" />
                </div>
                <div class="mb-2">
                    <label>Base Unit</label>
                    <input type="text" class="form-control" id="uomBaseUnit" />
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-primary theme-button" onclick="saveUOM()">Save</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-sm border-0">
            <div class="modal-header bg-danger text-white py-2 px-3">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                Are you sure you want to delete this UOM?
            </div>
            <div class="modal-footer justify-content-center">
                <button class="btn btn-outline-secondary" data-bs-dismiss="modal">No</button>
                <button class="btn btn-danger" onclick="deleteUOMConfirmed()">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentEditId = 0;

        function openEditModal(code) {
            currentEditId = code;

            $.get('/UOM/Get/' + code, function (data) {
                $('#uomCode').val(data.UOMCode);
                $('#uomCodeInput').val(data.UOMCode).prop('disabled', true); // disable on edit
                $('#uomDescription').val(data.Description);
                $('#uomBaseUnit').val(data.BaseUnit);
                $('#uomModal').modal('show');
            });
        }

        function confirmDelete(id) {
            currentEditId = id;
            $('#confirmDeleteModal').modal('show');
        }

        function deleteUOMConfirmed() {
            showSpinner("Deleting...");
            $.post('/UOM/Delete/' + currentEditId, function () {
                showToast("Conversion deleted successfully!", "danger");
                setTimeout(() => location.reload(), 1000);
            });
        }

        function openAddModal() {
            currentEditId = "";
            $('#uomCode').val('');
            $('#uomCodeInput').val('').prop('disabled', false);
            $('#uomDescription').val('');
            $('#uomBaseUnit').val('');
            $('#uomModal').modal('show');
        }

        function saveUOM() {
            const model = {
                UOMCode: $('#uomCodeInput').val(),
                Description: $('#uomDescription').val(),
                BaseUnit: $('#uomBaseUnit').val()
            };

            showSpinner("Saving...");
            $.post('/UOM/Save', model, function () {                
                $('#uomModal').modal('hide');
                showToast("Conversion saved successfully!", "success");
                setTimeout(() => location.reload(), 1000);
            });
        }
    </script>
}
