@model MillenniumWebFixed.Models.ManualQuote

@{
    Layout = null; // PDF previews are standalone
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Quote Preview - @Model.QuoteNo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            padding: 40px;
            font-size: 14px;
        }

        .header {
            border-bottom: 2px solid #333;
            margin-bottom: 30px;
        }

        .quote-title {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .quote-summary td {
            padding: 5px 10px;
        }

        .table th, .table td {
            font-size: 13px;
        }
    </style>
</head>
<body>

    <div class="header d-flex justify-content-between align-items-center">
        <div>
            <div class="quote-title">Manual Quote</div>
            @*<div>Quote No: <strong>@Model.QuoteNo</strong></div>
        <div>Revision: @Model.RevisionID</div>*@
            <div>Quote No: <strong>NOT GENERATED</strong></div>
            <div>Revision: <strong>NOT GENERATED</strong></div>
        </div>
        <div class="text-end">
            <div><strong>Date:</strong> @((Model.ImportDate ?? DateTime.Now).ToString("yyyy-MM-dd"))</div>
            <div><strong>Customer:</strong> @(Model.PotentialCustomer?.FullName ?? "-")</div>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Product</th>
                <th>Qty</th>
                <th>Cost</th>
                <th>Margin %</th>
                <th>Selling Price</th>
                <th>Line Total</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ManualQuoteLineItems != null && Model.ManualQuoteLineItems.Any())
            {
                int i = 1;
                foreach (var item in Model.ManualQuoteLineItems)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@item.Product?.Name</td>
                        <td>@item.Qty</td>
                        <td>@((item.CostPrice ?? 0).ToString("C"))</td>
                        <td>@item.MarginPercent</td>
                        <td>@((item.SellingPrice ?? 0).ToString("C"))</td>
                        <td>@((item.SellingPrice ?? 0) * item.Qty).ToString("C")</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="7" class="text-center text-muted">No items found</td></tr>
            }
        </tbody>
    </table>

    <div class="mt-4 text-end">
        @{
            var total = Model.ManualQuoteLineItems?.Sum(i => i.SellingPrice * i.Qty) ?? 0;
        }
        <h5>Total: <strong>@total.ToString("C")</strong></h5>
    </div>

</body>
</html>
