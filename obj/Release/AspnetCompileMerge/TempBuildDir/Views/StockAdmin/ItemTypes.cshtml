@model IEnumerable<MillinniumWebFixed.Models.ItemType>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Item Types";
}

<div class="container mt-3">
    <h4>Item Types</h4>
    <a href="@Url.Action("Index", "Admin")" class="btn mb-3 theme-button btn-sm">
        ← Back to Admin Panel
    </a>
    <button class="btn mb-3 theme-button btn-sm" onclick="openAddModal()">
        <i class="fas fa-plus"></i> Add New
    </button>

    <table class="table table-striped table-bordered table-dark-whole">
        <thead class="table-dark small">
            <tr>
                <th style="width: 50px;">ID</th>
                <th>Name</th>
                <th style="width: 120px;">Base UOM</th>
                <th style="width: 50px; text-align:center;">M²</th>
                <th style="width: 50px; text-align:center;">M³</th>
                <th>Notes</th>
                <th style="width: 100px; text-align: center;">Actions</th>
            </tr>
        </thead>
        <tbody class="small">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.BaseUOM</td>
                    <td class="text-center">@((item.SupportsM2) ? "✔" : "")</td>
                    <td class="text-center">@((item.SupportsM3) ? "✔" : "")</td>
                    <td>@item.Notes</td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                            <button class="btn btn-outline-primary" title="Edit" onclick="openEditModal(@item.Id)">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-outline-danger" title="Delete" onclick="confirmDelete(@item.Id)">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

<!-- MODALS -->
<div class="modal fade" id="itemTypeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-sm border-0">
            <div class="modal-header bg-dark text-white py-2 px-3">
                <h5 class="modal-title">Item Type</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="itemTypeId" name="Id" />
                <div class="mb-2">
                    <label>Name</label>
                    <input type="text" class="form-control" id="itemTypeName" />
                </div>
                <div class="mb-2">
                    <label>Base UOM</label>
                    <input type="text" class="form-control" id="itemTypeUOM" />
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="itemTypeM2" />
                    <label class="form-check-label">Supports M²</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="itemTypeM3" />
                    <label class="form-check-label">Supports M³</label>
                </div>
                <div class="mb-2">
                    <label>Notes</label>
                    <textarea class="form-control" id="itemTypeNotes" rows="2"></textarea>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-primary theme-button" onclick="saveItemType()">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-sm border-0">
            <div class="modal-header bg-danger text-white py-2 px-3">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                Are you sure you want to delete this item type?
            </div>
            <div class="modal-footer justify-content-center">
                <button class="btn btn-outline-secondary" data-bs-dismiss="modal">No</button>
                <button class="btn btn-danger" onclick="deleteItemTypeConfirmed()">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentEditId = 0;

        function openEditModal(id) {
            currentEditId = id;

            // Fetch item data from server or inline from table (for demo, hardcode or simulate)
            $.get('/ItemType/Get/' + id, function (data) {
                $('#itemTypeId').val(data.Id);
                $('#itemTypeName').val(data.Name);
                $('#itemTypeUOM').val(data.BaseUOM);
                $('#itemTypeM2').prop('checked', data.SupportsM2);
                $('#itemTypeM3').prop('checked', data.SupportsM3);
                $('#itemTypeNotes').val(data.Notes);

                $('#itemTypeModal').modal('show');
            });
        }

        function confirmDelete(id) {
            currentEditId = id;
            $('#confirmDeleteModal').modal('show');
        }

        function deleteItemTypeConfirmed() {
            showSpinner("Deleting...");
            $.post('/ItemType/Delete/' + currentEditId, function () {
                showToast("Conversion deleted successfully!", "danger");
                setTimeout(() => location.reload(), 1000);
            });
        }

        function openAddModal() {
            currentEditId = 0;
            $('#itemTypeId').val('');
            $('#itemTypeName').val('');
            $('#itemTypeUOM').val('');
            $('#itemTypeM2').prop('checked', false);
            $('#itemTypeM3').prop('checked', false);
            $('#itemTypeNotes').val('');
            $('#itemTypeModal').modal('show');
        }

        function saveItemType() {
            const model = {
                Id: parseInt($('#itemTypeId').val()) || 0,
                Name: $('#itemTypeName').val(),
                BaseUOM: $('#itemTypeUOM').val(),
                SupportsM2: $('#itemTypeM2').is(':checked'),
                SupportsM3: $('#itemTypeM3').is(':checked'),
                Notes: $('#itemTypeNotes').val()
            };

            showSpinner("Saving...");
            $.post('/ItemType/Save', model, function () {
                $('#itemTypeModal').modal('hide');
                showToast("Conversion saved successfully!", "success");
                setTimeout(() => location.reload(), 1000);
            });
        }
    </script>
}
