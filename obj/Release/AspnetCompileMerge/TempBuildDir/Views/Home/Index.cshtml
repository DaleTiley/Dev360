@{
    ViewBag.Title = "Dashboard";
    ViewBag.BodyClass = "body-dash-img";
}
<style>
    .main-content, .container {
    margin-top: 0px!important;
    }
</style>
<div class="container body-dash-img mt-0">
    <div class="row align-items-start">
        <!-- Dashboard Tiles (left) -->
        <div class="col-md-6">
            <div class="bg-white p-3 mb-3 rounded shadow-sm w-100">
                <h5 class="mb-1">Excel Projects</h5>
                <p class="small fst-italic text-muted mb-2">Import new Excel Project, view existing projects</p>
                <div class="d-flex gap-3 mb-3 flex-wrap">
                    <div class="card dashboard-card text-center position-relative" onclick="location.href='/Import/ListExcel'">
                        <i class="fas fa-list dashboard-icon"></i>
                        <div class="card-title">Manage Projects</div>
                        @if (ViewBag.NewExcelQuotes != null && ViewBag.NewExcelQuotes > 0)
                        {
                            <span class="badge bg-danger text-white position-absolute top-0 end-0 m-2">
                                +@ViewBag.NewExcelQuotes NEW
                            </span>
                        }
                    </div>

                    <div class="card dashboard-card text-center" onclick="location.href='@Url.Action("ImportExcel", "Import")'">
                        <i class="fas fa-file-excel dashboard-icon"></i>
                        <div class="card-title">Import New Project</div>
                    </div>
                </div>
            </div>

            <!-- Row 1 -->
