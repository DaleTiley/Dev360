<!-- Spinner Overlay with SignalR Progress -->
<div id="globalSpinnerOverlay" class="spinner-overlay d-none justify-content-center align-items-center">
    <div class="text-center">
        <div class="spinner-border text-white" role="status"
             style="width: 3rem; height: 3rem; animation: spinner-spin 0.8s linear infinite, pulse-glow 1.5s ease-in-out infinite;">
            <span class="visually-hidden">Please wait...</span>
        </div>
        <div id="progressText" class="text-white mt-2 fw-bold">Please wait...</div>
        <div id="progressLog" class="text-white small text-start mt-2 px-3"></div>
    </div>
</div>
