<div class="modal fade" id="customerSearchModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white py-2">
                <h6 class="modal-title mb-0">Select Customer</h6>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table id="customerTable" class="table table-striped table-sm" style="width: 100%;">
                    <thead class="bg-primary text-white small">
                        <tr>
                            <th class="d-none">ID</th>
                            <th>Customer Name</th>
                            <th>Contact Person</th>
                            <th>Email</th>
                            <th>Customer Code</th>
                            <th>Address Line 1</th>
                            <th>Address Line 2</th>
                            <th>City</th>
                            <th>State/Province</th>
                            <th>Phone Number</th>
                            <th style="width: 100px; text-align:center;">Action</th>
                        </tr>
                    </thead>
                    <tbody class="small">
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td class="d-none">@customer.Id</td>
                                <td>@customer.CustomerName</td>
                                <td>@customer.ContactPerson</td>
                                <td>@customer.Email</td>
                                <td>@customer.CustomerCode</td>
                                <td>@customer.AddressLine1</td>
                                <td>@customer.AddressLine2</td>
                                <td>@customer.City</td>
                                <td>@customer.StateProvince</td>
                                <td>@customer.Phone</td>
                                <td style="width: 100px; text-align:center;">
                                    <button type="button" class="btn btn-sm theme-button" onclick="selectCustomer(@customer.Id, '@customer.CustomerName')">Select</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
