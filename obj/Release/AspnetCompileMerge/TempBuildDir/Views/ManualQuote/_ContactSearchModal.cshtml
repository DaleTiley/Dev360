@model IEnumerable<MillenniumWebFixed.ViewModels.ContactDropdownItem>

<div class="modal fade" id="contactSearchModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white py-2">
                <h6 class="modal-title mb-0">Select Contact</h6>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table id="contactTable" class="table table-striped table-sm" style="width: 100%;">
                    <thead class="bg-primary text-white small">
                        <tr>
                            <th class="d-none">ContactId</th>
                            <th>Name</th>
                            <th>Designation</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th style="width: 100px; text-align:center;">Action</th>
                        </tr>
                    </thead>
                    <tbody class="small">
                        @foreach (var contact in Model)
                        {
                            <tr>
                                <td class="d-none">@contact.ContactId</td>
                                <td>@contact.Name</td>
                                <td>@contact.Designation</td>
                                <td>@contact.Email</td>
                                <td>@contact.PhoneNumber</td>
                                <td style="width: 100px; text-align:center;">
                                    <button type="button" class="btn btn-sm theme-button" onclick="selectContact(@contact.ContactId, '@contact.Name')">Select</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
