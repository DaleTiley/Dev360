@model MillenniumWebFixed.Models.Customer
<div class="modal fade" id="customerModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form action="@Url.Action("SaveCustomer", "Admin")" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Customer Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group">
                        @Html.LabelFor(m => m.CustomerName)
                        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Phone)
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.City)
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.IsActive)
                        @Html.CheckBoxFor(m => m.IsActive)
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn theme-button">Save</button>
                    @*<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>*@
                </div>
            </form>
        </div>
    </div>
</div>