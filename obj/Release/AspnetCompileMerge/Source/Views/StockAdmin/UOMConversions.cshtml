@model IEnumerable<MillinniumWebFixed.Models.UOMConversion>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "UOM Conversions";
}

<div class="container mt-3">
    <h4>UOM Conversions</h4>
    <a href="@Url.Action("Index", "Admin")" class="btn mb-3 theme-button btn-sm">
        ← Back to Admin Panel
    </a>
    <button class="btn btn-primary mb-3 theme-button btn-sm" onclick="openAddModal()">
        <i class="fas fa-plus"></i> Add New
    </button>

    <table class="table table-striped table-bordered table-dark-whole">
        <thead class="table-dark small">
            <tr>
                <th style="width: 50px;">ID</th>
                <th>Item Type</th>
                <th>From UOM</th>
                <th>To UOM</th>
                <th>Formula</th>
                <th style="width: 80px; text-align:center;">Props?</th>
                <th>Notes</th>
                <th style="width: 100px; text-align: center;">Actions</th>
            </tr>
        </thead>
        <tbody class="small">
            @foreach (var item in Model)
            {
                var debug = item.ItemType?.Name;
                <tr>
                    <td>@item.Id</td>
                    <td>@(item.ItemType != null ? item.ItemType.Name : "")</td>
                    <td>@item.FromUOM</td>
                    <td>@item.ToUOM</td>
                    <td>@item.Formula</td>
                    <td class="text-center">@(item.RequiresProperties ? "✔" : "")</td>
                    <td>@item.Notes</td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                            <button class="btn btn-outline-primary" title="Edit" onclick="openEditModal(@item.Id)">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-outline-danger" title="Delete" onclick="confirmDelete(@item.Id)">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal for Add/Edit -->
<div class="modal fade" id="conversionModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-sm border-0">
            <div class="modal-header bg-dark text-white py-2 px-3">
                <h5 class="modal-title">UOM Conversion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
                <form id="convForm">
                <div class="modal-body">
                    <input type="hidden" id="convId" name="Id" />

                    <select class="form-select mb-1" id="convItemType" required>
                        <option value="">-- Select Item Type --</option>
                        @foreach (var type in (IEnumerable<SelectListItem>)ViewBag.ItemTypes)
                        {
                            <option value="@type.Value">@type.Text</option>
                        }
                    </select>
                    <select class="form-select mb-1" id="convFromUOM" required>
                        <option value="">-- Select From UOM --</option>
                        @foreach (var uom in (IEnumerable<SelectListItem>)ViewBag.UOMs)
                        {
                            <option value="@uom.Value">@uom.Text</option>
                        }
                    </select>
                    <select class="form-select mb-1" id="convToUOM" required>
                        <option value="">-- Select To UOM --</option>
                        @foreach (var uom in (IEnumerable<SelectListItem>)ViewBag.UOMs)
                        {
                            <option value="@uom.Value">@uom.Text</option>
                        }
                    </select>

                    <div class="mb-2">
                        <label>Formula</label>
                        <input type="text" class="form-control" id="convFormula" required />
                    </div>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="convRequiresProps" />
                        <label class="form-check-label">Requires Properties</label>
                    </div>

                    <div class="mb-2">
                        <label>Notes</label>
                        <textarea class="form-control" id="convNotes" rows="2"></textarea>
                    </div>
                </div>
                </form>
                <div class="modal-footer justify-content-between">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary theme-button" onclick="saveUOMConversion()">Save</button>
                </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-sm border-0">
            <div class="modal-header bg-danger text-white py-2 px-3">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                Are you sure you want to delete this conversion?
            </div>
            <div class="modal-footer justify-content-center">
                <button class="btn btn-outline-secondary" data-bs-dismiss="modal">No</button>
                <button class="btn btn-danger" onclick="deleteConversionConfirmed()">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentEditId = 0;

        function openAddModal() {
            currentEditId = 0;
            $('#convId').val('');
            $('#convItemType').val('');
            $('#convFromUOM').val('');
            $('#convToUOM').val('');
            $('#convFormula').val('');
            $('#convRequiresProps').prop('checked', false);
            $('#convNotes').val('');
            $('#conversionModal').modal('show');
        }

        function openEditModal(id) {
            currentEditId = id;
            $.get('/UOMConversion/Get/' + id, function (data) {
                $('#convId').val(data.Id);
                $('#convItemType').val(data.ItemTypeId);
                $('#convFromUOM').val(data.FromUOM);
                $('#convToUOM').val(data.ToUOM);
                $('#convFormula').val(data.Formula);
                $('#convRequiresProps').prop('checked', data.RequiresProperties);
                $('#convNotes').val(data.Notes);
                $('#conversionModal').modal('show');
            });
        }

        function saveUOMConversion() {
            const form = document.getElementById('convForm');
            if (!form.checkValidity()) {
                form.reportValidity(); // Show browser tooltips
                return;
            }

            // proceed as before
            const model = {
                Id: parseInt($('#convId').val()) || 0,
                ItemTypeId: parseInt($('#convItemType').val()),
                FromUOM: $('#convFromUOM').val(),
                ToUOM: $('#convToUOM').val(),
                Formula: $('#convFormula').val(),
                RequiresProperties: $('#convRequiresProps').is(':checked'),
                Notes: $('#convNotes').val()
            };

            showSpinner("Saving...");
            $.post('/UOMConversion/Save', model, function () {
                showToast("Conversion saved successfully!", "success");
                setTimeout(() => location.reload(), 1000);
            });
        }


        function confirmDelete(id) {
            currentEditId = id;
            $('#confirmDeleteModal').modal('show');
        }

        function deleteConversionConfirmed() {
            showSpinner("Deleting...");
            $.post('/UOMConversion/Delete/' + currentEditId, function () {
                $('#confirmDeleteModal').modal('hide');
                showToast("Conversion deleted successfully!", "danger");
                setTimeout(() => location.reload(), 1000);
            });
        }
    </script>
}
